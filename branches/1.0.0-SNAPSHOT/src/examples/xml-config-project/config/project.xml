<?xml version="1.0" encoding="UTF-8"?>

<project>

  <dll-objects>
    <create-order>
      <item>usr</item>
      <item>dbl</item>
      <item>lib</item>
      <item>dir</item>
      <item>scm</item>
      <item>seq</item>
      <item>syn</item>
      <item>tab</item>
      <item>cst</item>
      <item>fct</item>
      <item>prc</item>
      <item>pkg</item>
      <item>jar</item>
      <item>vw</item>
      <item>trg</item>
      <item>idx</item>
      <item>gra</item>
    </create-order>
    <drop-order>
      <item>scm</item>
      <item>usr</item>
      <item>vw</item>
      <item>syn</item>
      <item>trg</item>
      <item>typ</item>
      <item>tab</item>
      <item>prc</item>
      <item>fct</item>
      <item>pkg</item>
      <item>jar</item>
      <item>seq</item>
      <item>idx</item>
      <item>dbl</item>
    </drop-order>
  </dll-objects>

  <folders>
    <folder name="config" directory="config" />

    <folder name="create" directory="create">
      <!-- folder create contains sub-folders that map to one or more of 
        the defined connectors -->
      <folder name="connector" map="connector">
        <folder name="dml" directory="dat">
          <!-- folder 'dml' contains sub-folders that map to one or more 
            of the defined environments -->
          <folder name="env" map="environment" />
        </folder>
        <folder name="ddl" directory="ddl">
          <!-- folder 'ddl' contains subfolders that map to one or more of 
            the 'objects' in 'create-order' -->
          <directory name="ddl-objects" map="create-order" />
        </folder>
      </folder>
    </folder>

    <folder name="update" directory="alter">
      <!-- folder 'update' contains one or more sub-directories that map 
        to a version number -->
      <folder name="version" map="version">
        <!-- folder 'version' contains sub-folders that map to one or more 
          of the defined connectors -->
        <folder name="connector" map="connector">
          <folder name="dml" directory="dat">
            <!-- folder 'dml' contains sub-folders that map to one or more 
              of the defined environments -->
            <folder name="env" map="environment" />
          </folder>
          <folder name="ddl" directory="ddl">
            <!-- folder 'ddl' contains subfolders that map to one or more 
              of the 'objects' in 'create-order' -->
            <directory name="ddl-objects" map="create-order" />
          </folder>
        </folder>
      </folder>
    </folder>
  </folders>

</project>