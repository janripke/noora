<?xml version="1.0"?>

<!-- list of plugins that are supported/required for this project -->
<plugins>

  <plugin name="help">
    <class>org.noora.plugin.HelpPlugin.HelpPlugin</class>
    <priority>10</priority>
    <description>displays help text(s)</description>
  </plugin>

  <plugin name="version">
    <class>org.noora.plugin.VersionPlugin.VersionPlugin</class>
    <priority>20</priority>
    <description>displays NoOra's version string</description>
  </plugin>

  <plugin name="revision">
    <class>org.noora.plugin.RevisionPlugin.RevisionPlugin</class>
    <priority>21</priority>
    <description>displays NoOra's revision string</description>
  </plugin>
  
  <plugin name="generate">
    <class>org.noora.plugin.GeneratePlugin.GeneratePlugin</class>
    <description>intiates a new NoOra database project, or a new release of an existing database project.</description>
    <priority>100</priority>
    <config>config/plugins/generate.xml</config>
  </plugin>

</plugins>