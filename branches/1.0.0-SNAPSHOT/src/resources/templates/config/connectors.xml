@require(generator)
<?xml version="1.0" encoding="UTF-8"?>

<connectors>

  <!-- This file contains connector definitions for your project.
    
    It contains definitions for oracle, mysql and sqlite databases.
    The first child defines the type of database, its version and the connection data.
    
    A connector can have type:
    - command: use the commandline interface to push scripts to the database (e.g. sqlplus for oracle)
    - socket: use a socket connection to push scripts to the database.
   -->

@for con in generator.param('connectors'):
  <connector name="@con" type="command">
    @generator.database('connector-template')
    <blocked>
      <plugin>recreate</plugin>
      <plugin>drop</plugin>
    </blocked>
  </connector>
  
@end
  
</connectors>