<?xml version="1.0" encoding="UTF-8"?>

<connectors>

  <connector name="store-dev" type="command">
    <oracle version="11.0.2.0.3">
      <host>dev.domain.com</host>
      <port>1521</port>
      <user>theUser</user>
      <password>ItsPassword</password>
    </oracle>
  </connector>
  <connector name="store-test" type="command">
    <oracle version="11.0.2.0.3">
      <host>test.domain.com</host>
      <port>1521</port>
      <user>theUser</user>
      <password>ItsPassword</password>
    </oracle>
  </connector>
  <connector name="store-uat" type="command">
    <oracle version="11.0.2.0.3">
      <host>uat.domain.com</host>
      <port>1521</port>
      <user>theUser</user>
      <password>ItsPassword</password>
    </oracle>
  </connector>
  <connector name="store" type="socket">
    <oracle version="11.0.2.0.3">
      <host>store.domain.com</host>
      <port>1521</port>
      <user>theUser</user>
      <password>ItsPassword</password>
    </oracle>
    <blocked>
      <plugin>recreate</plugin>
      <plugin>drop</plugin>
    </blocked>
  </connector>

  <connector name="store-mysql-dev" type="command">
    <mysql version="5.6">
      <host>dev.domain.com</host>
      <port>3306</port>
      <user>theUser</user>
      <password>ItsPassword</password>
      <database>devstore</database>
    </mysql>
  </connector>
  <connector name="store-mysql-prod" type="socket">
    <mysql version="5.6">
      <host>store.domain.com</host>
      <port>3306</port>
      <user>theUser</user>
      <password>ItsPassword</password>
      <database>store</database>
    </mysql>
    <blocked>
      <plugin>recreate</plugin>
      <plugin>drop</plugin>
    </blocked>
  </connector>
  
  <connect-options>
  
    <connect-options database="oracle" version="11.0.2.0.3">
      <command>sqlplus.exe</command>
      <options>
        <option type="command"  name="sqlplus.exe"                                    />
        <option type="option"   name="-l"                                             />
        <option type="argument" name="-s"          value="${user}/${password}@{host}" />
        <option type="value"                       value="@${file}"                   />
      </options>     
    </connect-options>
    
    <connect-options database="mysql" version="5.6">
      <options>
        <option type="command" name="mysql.exe"                      />
        <option type="assign"  name="--host"     value="${host}"     />
        <option type="assign"  name="--user"     value="${user}"     />
        <option type="assign"  name="--password" value="${password}" />
        <option type="value"                     value="${database}" />
        <option type="value"                     value="&lt;${file}" />
      </options>
    </connect-options>
    
  </connect-options>

</connectors>