create table APPLICATION_PROPERTIES(
  ID number(12),
  NAME varchar2(256),
  VALUE varchar2(4000),
  DESCRIPTION varchar2(256),
  CREATED_AT              date default sysdate,
  CREATED_BY              varchar2(45) default user,
  UPDATED_AT              date default sysdate,
  UPDATED_BY              varchar2(45) default user
)tablespace APPDAT;

alter table APPLICATION_PROPERTIES add constraint AP_ID_PK primary key (ID) using index tablespace APPIDX;
alter table APPLICATION_PROPERTIES add constraint AP_NAME_NN check (name is not null);
alter table APPLICATION_PROPERTIES add constraint AP_VALUE_NN check (value is not null);
alter table APPLICATION_PROPERTIES add constraint AP_CREATED_AT_NN check (created_at is not null);
alter table APPLICATION_PROPERTIES add constraint AP_CREATED_BY_NN check (created_by is not null);
alter table APPLICATION_PROPERTIES add constraint AP_UPDATED_AT_NN check (updated_at is not null);
alter table APPLICATION_PROPERTIES add constraint AP_UPDATED_BY_NN check (created_by is not null);

alter table APPLICATION_PROPERTIES add constraint AP_NAME_UNIQ unique (NAME) using index tablespace APPIDX;
